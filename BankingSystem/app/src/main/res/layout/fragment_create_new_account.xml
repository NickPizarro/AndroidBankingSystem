<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project2.bankingsystem.CreateNewAccountFragment"
    android:orientation="vertical">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#008"
       android:textColor="#FFF"
       android:textSize="18sp"
       android:text="Initial deposit"/>

    <EditText
        android:id="@+id/et_initial_deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your initial deposit."/>

    <TextView
        android:background="#008"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your account type"/>
    <Spinner
        android:id="@+id/spinner_new_account_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:text="Set this account as your default account?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_default_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"/>
        <CheckBox
            android:id="@+id/checkbox_default_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="80sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/new_account_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"/>

        <Button
            android:id="@+id/new_account_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"/>


    </LinearLayout>





</LinearLayout>
